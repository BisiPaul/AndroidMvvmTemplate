<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageViewStyle" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- CONTACTS -->
    <style name="Theme.AndroidMvvmTemplate.Contacts" />

    <style name="Theme.AndroidMvvmTemplate.Contacts.Text" parent="Theme.AndroidMvvmTemplate.Contacts" />

    <style name="Theme.AndroidMvvmTemplate.ContactsText.Title" parent="Theme.AndroidMvvmTemplate.Contacts.Text">
        <item name="android:textColor">@color/genericTextColor</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="Theme.AndroidMvvmTemplate.ContactsText.SectionTitle" parent="Theme.AndroidMvvmTemplate.Contacts.Text">
        <item name="android:textColor">@color/contactsSubtitleColor</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.AndroidMvvmTemplate.ContactsText.ItemName" parent="Theme.AndroidMvvmTemplate.Contacts.Text">
        <item name="android:textColor">@color/genericTextColor</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <!-- CONTACT DETAILS -->
    <style name="Theme.AndroidMvvmTemplate.ContactDetails" />

    <style name="Theme.AndroidMvvmTemplate.ContactDetails.Title" parent="Theme.AndroidMvvmTemplate.ContactDetails">
        <item name="android:textColor">@color/genericTextColor</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="Theme.AndroidMvvmTemplate.ContactDetails.Name" parent="Theme.AndroidMvvmTemplate.ContactDetails">
        <item name="android:textColor">@color/genericTextColor</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.AndroidMvvmTemplate.ContactDetails.Email" parent="Theme.AndroidMvvmTemplate.ContactDetails">
        <item name="android:textColor">@color/contactDetailsEmailColor</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.AndroidMvvmTemplate.ContactDetails.PostTitle" parent="Theme.AndroidMvvmTemplate.ContactDetails">
        <item name="android:textColor">@color/genericTextColor</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
    </style>

    <style name="Theme.AndroidMvvmTemplate.ContactDetails.PostBody" parent="Theme.AndroidMvvmTemplate.ContactDetails">
        <item name="android:textColor">@color/contactDetailsEmailColor</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>
</resources>